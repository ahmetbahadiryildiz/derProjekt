<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DerProjekt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/day_secondary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/day_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/day_primary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/day_background</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="toolbarStyle">@style/CustomToolBar</item>
        <item name="tabStyle" >@style/CustomTabLayout</item>
    </style>


    <style name="CustomToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="logo">@drawable/ic_baseline_face_24</item>
        <item name="title">@string/app_name</item>
        <item name="navigationIcon">@drawable/ic_baseline_arrow_back_24</item>
        <item name="titleMarginStart">30dp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/day_secondary</item>
    </style>

</resources>